package com.revshop.service;

public class NotificationService {

    // Buyer notification
    public void buyerAlert(String message) {
        System.out.println("[BUYER ALERT] " + message);
    }

    // Seller notification
    public void sellerAlert(String message) {
        System.out.println("[SELLER ALERT] " + message);
    }
}