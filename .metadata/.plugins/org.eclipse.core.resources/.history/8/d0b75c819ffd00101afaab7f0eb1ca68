package com.revshop.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import com.revshop.model.User;
import com.revshop.util.DBConnection;

public class UserDAO {

    // ================= REGISTER =================
    public boolean register(User user) {

        String checkSql =
            "SELECT 1 FROM USERS WHERE LOWER(email) = LOWER(?)";

        String insertSql =
            "INSERT INTO USERS (USER_ID, EMAIL, PASSWORD, QUESTION, ANSWER) " +
            "VALUES (USER_SEQ.NEXTVAL, ?, ?, ?, ?)";

        try (Connection con = DBConnection.getConnection()) {

            // Check if email already exists
            PreparedStatement checkPs = con.prepareStatement(checkSql);
            checkPs.setString(1, user.getEmail().trim());
            ResultSet rs = checkPs.executeQuery();

            if (rs.next()) {
                return false; // email already registered
            }

            // Insert user into DB
            PreparedStatement ps = con.prepareStatement(insertSql);
            ps.setString(1, user.getEmail().trim());
            ps.setString(2, user.getPassword().trim());
            ps.setString(3, user.getQuestion().trim());
            ps.setString(4, user.getAnswer().trim());

            ps.executeUpdate();
            return true;

        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
    }

    // ================= LOGIN =================
    public User login(String email, String password) {

        String sql =
            "SELECT * FROM USERS WHERE LOWER(email)=LOWER(?) AND password=?";

        try (Connection con = DBConnection.getConnection();
             PreparedStatement ps = con.prepareStatement(sql)) {

            ps.setString(1, email.trim());
            ps.setString(2, password.trim());

            ResultSet rs = ps.executeQuery();

            if (rs.next()) {
                User user = new User();
                user.setEmail(rs.getString("email"));
                user.setPassword(rs.getString("password"));
                user.setQuestion(rs.getString("question"));
                user.setAnswer(rs.getString("answer"));
                return user;
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
        return null;
    }

    // ================= FORGOT PASSWORD =================
    public boolean forgotPassword(String email,
                                  String question,
                                  String answer,
                                  String newPassword) {

        String sql =
            "UPDATE USERS SET password=? " +
            "WHERE LOWER(email)=LOWER(?) AND question=? AND answer=?";

        try (Connection con = DBConnection.getConnection();
             PreparedStatement ps = con.prepareStatement(sql)) {

            ps.setString(1, newPassword.trim());
            ps.setString(2, email.trim());
            ps.setString(3, question.trim());
            ps.setString(4, answer.trim());

            return ps.executeUpdate() > 0;

        } catch (Exception e) {
            e.printStackTrace();
            return false;
        }
    }
}








