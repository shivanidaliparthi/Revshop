
package com.revshop.service;

import java.util.Scanner;
import com.revshop.dao.*;
import com.revshop.model.*;

public class SellerService {

    private ProductDAO productDAO = new ProductDAO();
    private ReviewDAO reviewDAO = new ReviewDAO();
    private NotificationService notify = new NotificationService();

    public void sellerMenu(Scanner sc) {

        int ch;
        do {
            System.out.println("1.Add Product 2.View Reviews 3.Exit");
            ch = sc.nextInt();

            switch (ch) {
                case 1:
                    System.out.print("Name:");
                    sc.nextLine();
                    String n = sc.nextLine();
                    System.out.print("Category:");
                    String c = sc.nextLine();
                    System.out.print("MRP:");
                    double m = sc.nextDouble();
                    System.out.print("Discount:");
                    double d = sc.nextDouble();
                    System.out.print("Stock:");
                    int s = sc.nextInt();

                    productDAO.addProduct(
                        new Product(productDAO.nextId(), n, c, m, d, s));

                    notify.notifySeller("Product added");
                    break;

                case 2:
                    for (Review r : reviewDAO.getAll()) {
                        System.out.println(
                            "Rating:" + r.getRating()
                            + " Comment:" + r.getComment());
                    }
                    break;
            }
        } while (ch != 3);
    }
}














































